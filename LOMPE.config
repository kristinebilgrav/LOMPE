/* 
config for LRP
*/

process {
        executor = 'local'
//    clusterOptions = '-A sensXX'
}

//alt change to docker
singularity {
    enabled = true
    autoMounts = true
} 

// process specific parameters and containers
process {
    withName:align {
        container='docker://quay.io/biocontainers/minimap2:2.24--h7132678_1'
        cpus = 16
        time = '16h'
    }

    withName:annotate_snvs {
        cpus = 4
        time = '3h'
        container:'docker://quay.io/biocontainers/ensembl-vep:108.2--pl5321h4a94de4_0'
    }

    withName:bam2fastq {
        cpus = 8
        time = '13h'
        container = 'samtools'
    }

    withName:bamindex {
        cpus = 8
        time = '2h'
        container = 'samtools'
    }
    withName:bcf_snv {
        container='docker://quay.io/biocontainers/bcftools'
        cpus = 8
        time = '22h'
    }

    withName:call_meth {
        beforeScript = 'export HDF5_PLUGIN_PATH=/usr/local/hdf5/lib/plugin'
        cpus = 16
        time = '42h'
        //container = 'docker://quay.io/biocontainers/nanopolish'
    }

    withName:cat {
        cpus = 2
        time = '2h'
    }

    withName:combine {
        container='shub://J35P312/SVDB'
        cpus = 2
        time = '3h'
    }

    withName:cpg_tools {
        container='kristinebilgrav/pb-cpgtool:latest'
        cpus = 16
        time = '16h'
    }

    withName: deepvar {
        container='docker://google/deepvariant:"1.5.0"'
        cpus=16
        time='2d'
    }

    withName:fastqc {
        container=''
        cpus = 16
        time = '10h'
    }

    withName:filter_snvs {
        container='docker://quay.io/biocontainers/bcftools'
        cpus = 4
        time = '12h'
    }

    withName:filter_query {
        cpus = 2
        time = '3h'
    }

    withName:meth_index {
        cpus = 16
        time = '22h'
        container = 'docker://quay.io/biocontainers/nanopolish'
    }

    withName:meth_polish {
        beforeScript = 'module load hdf5'
        cpus = 16
        time = '42h'
        container = 'docker://quay.io/biocontainers/nanopolish'
    }
    withName:modbam2bed	{ 
        container = 'docker://kristinebilgrav/modbam2bed:latest'
       	time = '10h'
       	cpus = 2
    }

    withName:phase_it {
        container='docker://quay.io/biocontainers/whatshap:1.7--py310h30d9df9_0'
        cpus = 8
        time = '16h'        
    }
    
    withName:picard {
        container=''
        cpus = 2
        time = '2h'
    }

    withName:pytor {
        container='dockere://quay.io/biocontainers/cnvpytor:1.2.1--pyhdfd78af_0'
        cpus = 8
        time = '5h'
    } 

    withName:query {
        container='shub://J35P312/SVDB'
        cpus = 2
        time = '3h'
    }

    withName: run_vep {
        container:'docker://quay.io/biocontainers/ensembl-vep:108.2--pl5321h4a94de4_0'
        cpus = 4
        time = '4h'
    }
    
    withName:sniff {
        container='docker://quay.io/biocontainers/sniffles:1.0.12--h8b12597_1'
        cpus = 16
        time = '5h'
    }


}



params {

    //input
    input = ""

    output = ""

    // sequencing method
    style= "" //check that one of the following [ont OR pb == map-ont OR map-pb, pacbio-ccs OR ont, ]

    file = "fastq" //fastq or bam - only pb

    //working directory
    LOMPE_home=""
    
    //reference file
    ref="/Users/krsaet/Desktop/git/FT_testing/human_g1k_v37_decoy.fasta"

    //vep
    vep_args='--cache --dir $VEP_CACHE --offline  --assembly GRCh38 --per_gene --format vcf --no_stats'

    pb_DB=""
    ont_DB=""


}